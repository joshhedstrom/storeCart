<div class="header">
  <h1>Grocery Store</h1>
  <div class="img"></div>
</div>


<div class="products">
<h2>Available Items</h2>
  <ul>
    {{#each products}}
      {{#unless in_cart}}
          {{>item-block in_cart=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>


<div class="cart">
<h2>Cart</h2>
  <ul>
    {{#each products}}
      {{#if in_cart}}
          {{>item-block in_cart=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>


<div class="addItem">
<h2>Can't find what you're looking for? Add an item here!</h2>
  <form>
    <label>Item:</label>
    <input id="item">
    <button id="submit">Add Item</button>
  </form>
</div>
